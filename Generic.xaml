<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImageShadowedImage" xmlns:imageex="using:ImageEx">

    <Style TargetType="local:ImageShadowedImage" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ImageShadowedImage">
                    <Grid>
                        <Grid Margin="0" HorizontalAlignment="Stretch" x:Name="VisualGrid">
                        </Grid>
                        <imageex:ImageEx HorizontalAlignment="Left" Shadow="{ThemeResource ImageShadow}" x:Name="MainImage" Margin="5" Opacity="1" CornerRadius="5">

                        </imageex:ImageEx>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
